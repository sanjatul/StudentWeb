@model StudentWeb.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<div class="border p-4">
    <h1 class="text-center">EDIT STUDENT DETAILS</h1>
    <hr />
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" class="form-control" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    @Html.DropDownListFor(model => model.Gender,
                             new List<SelectListItem>
                    {
                    new SelectListItem { Text = "Female", Value = "0" },
                    new SelectListItem { Text = "Male", Value = "1" }
                    },
                             "-- Select Gender --",
                             new { @class = "form-control" })
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DOB" class="form-label"></label>
                    <input asp-for="DOB" class="form-control" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ClassId" class="form-label">Class</label>
                    <select asp-for="ClassId" class="form-select w-100" asp-items="ViewBag.ClassId"></select>
                    <span asp-validation-for="ClassId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
