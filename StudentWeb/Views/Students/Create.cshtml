@model StudentWeb.Models.Student

@{
    ViewData["Title"] = "Create";
}
<div class="border p-4">
    <h1 class="text-center">ADD NEW STUDEN DETAILS</h1>
<hr />
<div class="row">
        <div class="col-md-8 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    @Html.DropDownListFor(model => model.Gender,
                             new List<SelectListItem>
                    {
                    new SelectListItem { Text = "Female", Value = "0" },
                    new SelectListItem { Text = "Male", Value = "1" }
                    },
                             "-- Select Gender --",
                             new { @class = "form-select w-100" }) 
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

            <div class="mb-3">
                <label asp-for="DOB" class="form-label"></label>
                <input asp-for="DOB" class="form-control" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ClassId" class="form-label">Class</label>
                    @Html.DropDownListFor(model => model.ClassId,
                             new SelectList(ViewBag.ClassId, "Value", "Text"),
                             "-- Select Class --",
                             new { @class = "form-select w-100" })

            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" /> | 
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
